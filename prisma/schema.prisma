// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  role      UserRole  @default(USER) // Future-proofing for admin access
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
  contacts  Contact[]
}

enum UserRole {
  USER
  ADMIN
}

model Project {
  id          String        @id @default(cuid())
  name        String
  projectCode String        // Producer-assigned unique identifier for invoice matching
  clientName  String?
  status      ProjectStatus @default(PLANNING)
  totalBudget Decimal       @default(0) @db.Decimal(12, 2)
  totalSpent  Decimal       @default(0) @db.Decimal(12, 2)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgetLines BudgetLine[]
  invoices    Invoice[]

  @@unique([userId, projectCode]) // Unique per user for invoice auto-matching
  @@index([projectCode]) // Indexed for fast lookup
}

enum ProjectStatus {
  PLANNING
  LIVE
  COMPLETED
  ARCHIVED
}

model LineItemTemplate {
  id        String   @id @default(cuid())
  category  String
  role      String
  isDefault Boolean  @default(true)
  sortOrder Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([isDefault])
}

model BudgetLine {
  id            String    @id @default(cuid())
  category      String
  lineNumber    Int
  name          String
  quantity      Decimal?  @db.Decimal(10, 2)
  days          Decimal?  @db.Decimal(10, 2)
  rate          Decimal?  @db.Decimal(10, 2)
  ot1_5         Decimal?  @db.Decimal(10, 2)
  ot2           Decimal?  @db.Decimal(10, 2)
  ot2_5         Decimal?  @db.Decimal(10, 2)
  estimate      Decimal   @default(0) @db.Decimal(12, 2)
  runningAmount Decimal?  @db.Decimal(12, 2)
  actualSpent   Decimal   @default(0) @db.Decimal(12, 2)
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  payeeId       String?
  payee         Contact?  @relation("BudgetLinePayee", fields: [payeeId], references: [id], onDelete: SetNull)
  invoices      Invoice[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([projectId])
  @@index([payeeId])
  @@index([category])
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String?
  amount        Decimal       @db.Decimal(12, 2)
  status        InvoiceStatus @default(MISSING)
  payeeId       String?
  payee         Contact?      @relation(fields: [payeeId], references: [id], onDelete: SetNull)
  projectId     String?       // Optional - null until producer assigns invoice
  project       Project?      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  budgetLineId  String?
  budgetLine    BudgetLine?   @relation(fields: [budgetLineId], references: [id], onDelete: SetNull)
  // File storage fields
  fileUrl       String?       // Public URL to access the file
  filePath      String?       // Storage path: invoices/{userId}/{invoiceId}/{filename}
  fileName      String?       // Original filename
  fileSize      Int?          // File size in bytes
  fileMimeType  String?       // MIME type (e.g., application/pdf)
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([projectId])
  @@index([payeeId])
}

enum InvoiceStatus {
  MISSING
  WAITING_APPROVAL
  APPROVED
  FLAGGED
  PAID
}

model Contact {
  id          String       @id @default(cuid())
  name        String
  email       String
  phone       String?
  company     String?
  role        String?
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoices    Invoice[]
  budgetLines BudgetLine[] @relation("BudgetLinePayee")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
}
